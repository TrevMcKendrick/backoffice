<%= render "pages/navbar" %>
<main id="main">
            <!-- start banner -->
  <section id="banner" class="tp-banner-container section">

      <!-- start rev slider -->
      <div class="tp-banner" >
          <ul>

              <!-- slide two -->
              <li data-transition="boxfade" data-slotamount="5" data-masterspeed="1000">

                  <!-- slide bg -->
                  <%= image_tag "slide-bg-2.jpg", "data-bgfit" => "cover", "data-bgposition" => "left top", "data-bgrepeat" => "no-repeat"  %>

                  <!-- slide layer 1 -->
                  <div class="tp-caption sfb"
                  data-x="-10"
                  data-y="50"
                  data-speed="1500"
                  data-start="800"
                  data-easing="Back.easeInOut">
                  <%= image_tag "man.png" %>
                  </div>

                  <!-- slide layer 2 -->
                  <div class="tp-caption sfl large-medium-black"
                  data-x="550"
                  data-y="130"
                  data-speed="1500"
                  data-start="1000"
                  data-easing="Back.easeInOut">
                    American Virtual Assistants to <br> help get your work done.
                  </div>

                  <!-- slide layer 3 -->
                  <div class="tp-caption sfl grey"
                  data-x="550"
                  data-y="220"
                  data-speed="1500"
                  data-start="1300"
                  data-easing="Back.easeInOut">
                      Let our team do your busywork so you <br>can get back to running your business.<br>
                  </div>

                  <!-- slide layer 4 -->
                  <div class="tp-caption sfl"
                  data-x="550"
                  data-y="320"
                  data-speed="1500"
                  data-start="1600"
                  data-easing="Back.easeInOut">
                      <a href="<%= what_we_do_path %>" class="button medium primary">Learn More</a>
                      <a href="<%= request_invite_path %>" class="button medium white">Request Invite</a>
                  </div>
              </li>
          </ul>
      </div>
      <!-- end rev slider -->

      <!-- initialize slider -->
      <script type="text/javascript">
          $(document).ready(function() {
              $('.tp-banner').revolution({
                  startwidth: 1050,
                  startheight: 500,
                  hideThumbs: 10,
                  fullWidth: 'on',
                  forceFullWidth: 'on',
                  videoJsPath:'src/rs-plugin/videojs/'
              });
          });
      </script>

  </section>
            <!-- end banner -->

